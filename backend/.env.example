# Database (Use your local PostgreSQL or switch back to SQLite for development)
DATABASE_URL="file:./prisma/dev.db"
# DATABASE_URL="postgresql://username:password@localhost:5432/goals_ai_db"

# Google OAuth
GOOGLE_CLIENT_ID="your_google_client_id_here"
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"

# Google Gemini AI
GOOGLE_GEMINI_API_KEY="your_gemini_api_key_here"

# Session & JWT
SESSION_SECRET="change_this_to_a_random_secret_in_production"
JWT_SECRET="your_jwt_secret_key_here"

# Redis (for sessions)
REDIS_URL="redis://localhost:6379"

# Server
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:5173"

# Logging
LOG_LEVEL="info"